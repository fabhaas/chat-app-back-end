{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "lib": [
            "dom",
	    "es2015",
            "es2017"
        ],
        "types": [
            "node",
        ],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "stripInternal": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": false,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "listFiles": false,
        "traceResolution": false,
        "newLine": "LF",
        "noEmitOnError": true,
        "inlineSources": true,
        "listEmittedFiles": false
    },
    "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib/*.d.ts",
        "lib/provider/*.d.ts",
        "test/cli",
        "test/expected",
        "test/fixture",
        "example"
    ]
}
